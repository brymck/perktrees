%table.no-border
  %tr
    %td Race
    %td
      %select#races
        - @races.each do |race|
          %option{:"data-skills" => "[#{race.skills_text}]"}= race.name
  %tr
    %td Name
    %td
      %input#name{type: :text}
  - %w(health magicka stamina).each do |stat|
    %tr
      %td= stat.humanize
      %td
        %input.stat{id: stat, type: :number, min: 100, max: 900, step: 10, value: 100}
  - %w(level perks stat_increases experience).each do |result|
    %tr
      %td= result.humanize
      %td{id: result}
%table
  %thead
    %tr
      %th Name
      %th Points
      %th Perks
  %tbody
    - @skills.each do |skill|
      %tr.skill
        = render partial: "row", locals: { skill: skill }
%label URL
%input#url{type: :text, size: 200}
