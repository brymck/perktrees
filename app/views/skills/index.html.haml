%table.no-border
  %tr
    %td Race
    %td
      %select#races
        - @races.each do |race|
          %option{:"data-skills" => "[#{race.skills_text}]"}= race.name
  %tr
    %td Name
    %td
      %input#name{type: :text}
  %tr
    %td Health
    %td
      %input#health.stat{type: :number, min: 100, max: 900, step: 10, value: 100}
  %tr
    %td Magicka
    %td
      %input#magicka.stat{type: :number, min: 100, max: 900, step: 10, value: 100}
  %tr
    %td Stamina
    %td
      %input#stamina.stat{type: :number, min: 100, max: 900, step: 10, value: 100}
  %tr
    %td Level
    %td#level
  %tr
    %td Experience
    %td#experience
%table
  %thead
    %tr
      %th Name
      %th Points
      %th Perks
  %tbody
    - @skills.each do |skill|
      %tr.skill
        = render partial: "row", locals: { skill: skill }
%label URL
%input#url{type: :text, size: 200}
